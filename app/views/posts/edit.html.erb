<% provide(:title, "編集する") %>
<div class="container">
<div class="row">
<div class="col-12 padding-top--md padding-bottom--lg">
<h1 class="h3 text-center"><%= yield(:title) %></h1>
<div class="col-12 col-md-6 m-auto">
<%= render "shared/error-post" %>
<%= form_with model: @post, local: true do |f| %>
<%= render "posts/form", f: f %>
<div class="text-center">
  <%= f.submit "更新する", class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>
</div>
</div>
