<%= form_with model: @post, url: posts_path, local: true do |f| %><div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <div class="custom-file">
    <%= f.file_field :img, class: "custom-file-input" %>
    <%= f.label :img, name: "img", class: "custom-file-label" %>
  </div>
  <p><%= f.check_box :remove_img %> 画像を削除する</p>
</div>
<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, size: "20x10", class: "form-control" %>
</div>
<div class="text-center">
  <%= f.submit "投稿する", class: "btn btn-primary" %>
</div>
<% end %>
