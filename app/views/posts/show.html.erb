<% provide(:title, @post.title) %>
<div class="container margin-top--lg">
<div class="row">
<div class="col-12 col-md-10 ol-lg-8 col-xl-7 m-auto">
<% if current_user %>
<div class="text-right mb-3">
  <button id="btn-authenticate_user-post-info" class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i>
  </button>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
    <%= link_to "編集する", edit_post_path, class: "dropdown-item" %>
    <div class="dropdown-divider"></div>
    <%= link_to "削除する", @post, method: :delete, class: "dropdown-item", data: { confirm: "本当に削除しますか？" } %>
  </div>
</div>
<% end %>
<h1 class="h3 mb-3"><%= @post.title %></h1>
<time class="small text-monospace d-none" datetime="<%= @post.updated_at %>"><%= @post.updated_at.to_s(:datetime_jp) %></time>
<% if @post.urls? %>
  <%= link_to @post.urls, target: :_blank do %>
    <div class="text-center mb-4 post-mainVisual" <% if @post.img? %> style="background: url(<%= @post.img.url %>) no-repeat; background-size: cover; height: 400px;">
      <% else %>
    <%= image_tag "https://themes.getbootstrap.com/wp-content/uploads/2019/10/screenshot-1-600x450.jpg", class: "img-fluid" %>
    <% end %>
    </div>
  <% end %>
<% else %>
  <div class="text-center mb-4 post-mainVisual" <% if @post.img? %> style="background: url(<%= @post.img.url %>) no-repeat; background-size: cover; height: 400px;">
    <% else %>
  <%= image_tag "https://themes.getbootstrap.com/wp-content/uploads/2019/10/screenshot-1-600x450.jpg", class: "img-fluid" %>
    <% end %>
  </div>
<% end %>
<% if @post.urls? %>
<p class="text-right"><%= link_to "サイトURLはこちら", @post.urls, target: :_blank %></p>
<% else %>

<% end %>
<p><%= @post.body %></p>
</div>
</div>
