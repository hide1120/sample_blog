<% provide(:title, "バナーの新規投稿") %>
<div class="container margin-top--lg">
<div class="row">
<div class="col-12">
<div class="col-12 col-md-6 m-auto">
<h1 class="h3 text-center mb-3"><%= yield(:title) %></h1>
<%= render "shared/error-banner" %>
<%= form_with model: @banner, local: true do |f| %>
<%= render "banners/form", f: f %>
<div class="text-center">
  <%= f.submit "投稿する", class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>
</div>
</div>
